#:import FadeTransition kivy.uix.screenmanager.FadeTransition

Management:
    transition: FadeTransition()
    HomeScreen:
    Encode:
    Decode:


<But@Button>:
    font_size: 50
    background_normal: "/Users/yonagil/StreamEncoded/rectangle-transparent-blank-3.png"
    background_down: "/Users/yonagil/StreamEncoded/rectangle-transparent-blank-3.png"


<But2@Button>:
    font_size: 50
    background_normal: "/Users/yonagil/StreamEncoded/button-transparent-background-17.png"
    background_down: "/Users/yonagil/StreamEncoded/button-transparent-background-17.png"

<HomeScreen>:
    name: "home"
    spacing: 10
    padding: 10
    Image:
        source: "/Users/yonagil/StreamEncoded/blue-square-walls-24979-2880x1800.jpg"
        allow_stretch: True
        keep_ratio: False
    GridLayout:
        orientation: "horizontal"
        rows: 2
        Label:
            size_hint_y: 0.3
            text: "Picture Encoding Program"
            font_size: 80
            color: 0,1,.5,1
            background_color: 0,0,0,0
            bold: True

        GridLayout:
            rows: 2
            AnchorLayout:
                But:
                    on_release: app.root.current = "Enc"
                    text: "Encode"
                    color: 1,0,0,1
                    size_hint_y: 0.3
                    size_hint_x: 0.3
            AnchorLayout:
                But:
                    on_release: app.root.current = "Dec"
                    text: "Decode"
                    color: 0,1,0,1
                    size_hint_y: 0.3
                    size_hint_x: 0.3

<LB@Label>:
    font_size: 50
    size_hint_x: 0.3

<TI@TextInput>:
    multiline: False
    font_size: 50
<GR@GridLayout>:
    pos_hint: {"center_x": .50, "center_y": .50}
    size_hint_y: .1
    cols: 2

<Encode>:
    name: "Enc"
    spacing: 10
    padding: 10
    Image:
        source: "/Users/yonagil/StreamEncoded/blue-square-walls-24979-2880x1800.jpg"
        allow_stretch: True
        keep_ratio: False
    GridLayout:
        orientation: "horizontal"
        rows: 2

        Image:
            source: None
            id: img

            keep_ratio: True
            allow_stretch: True

        GridLayout:
            cols: 3
            AnchorLayout:
                size_hint_x: 0.2
                Button:
                    size_hint_y: 0.2
                    on_press: manager.current = root.switch(manager.current, "down")

            ScreenManager:
                id: manager
                transition: FadeTransition()

                Screen:
                    name: "directory"
                    GR:
                        LB:
                            text: "Directory"
                        TI:
                            id: dir

                Screen:
                    name: "message"
                    GR:
                        LB:
                            text: "Message"
                        TI:
                            id: mes
                Screen:
                    name: "location"
                    GR:
                        LB:
                            text: "Location"
                        TI:
                            id: loc
                Screen:
                    name: "width"
                    GR:
                        LB:
                            text: "Width"
                        TI:
                            id: wid

            AnchorLayout:
                size_hint_x: 0.2
                Button:
                    size_hint_y: 0.2
                    on_press: manager.current = root.switch(manager.current, "up")

    Button:
        size_hint: 0.3, 0.1
        pos_hint: {"center_x": 0.5, "y": 0.05}
        text: "Encode"
        on_press: root.encodePhoto(), root.firePopup()


<encPU>:
    GridLayout:
        rows: 2
        Image:
            source: "/users/yonagil/downloads/image3.jpg"
            id: img

            keep_ratio: True
            allow_stretch: True

        GridLayout:
            cols: 2
            Label:
                text: "IP"
            TextInput:
                font_size: 30


<decPU>:
    title: "Decoded Message"
    title_align: "center"
    title_size: 50
    Label:
        text: "outputed text here"
        font_size: 50

<Decode>:
    name: "Dec"
    spacing: 10
    padding: 10
    Image:
        source: "/Users/yonagil/StreamEncoded/blue-square-walls-24979-2880x1800.jpg"
        keep_ratio: False
        allow_stretch: True
    GridLayout:
        rows: 3
        Image:
            source: None
            id: img2

            keep_ratio: True
            allow_stretch: True

        GR:
            LB:
                text: "Directory"
            TI:
                id: dir2

        Button:
            size_hint_y: .1
            text: "Decode"
            font_size: 50
            on_press: root.firePopup()
